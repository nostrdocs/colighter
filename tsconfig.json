{
	"exclude": ["dist", "node_modules"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "es2017",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "esnext",
		"outDir": "lib",
		"jsx": "react",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"sourceMap": true,
		"inlineSources": true,
		"noImplicitAny": false,
		"incremental": true,
		"strict": true,
		"pretty": true,
		"lib": ["ES2017", "ES2018.Promise", "DOM", "DOM.Iterable"],
	},
}
