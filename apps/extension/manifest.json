{
  "manifest_version": 3,
  "name": "Colighter",
  "description": "A chrome extension for highlighting web resources, while collaborating over Nostr",
  "version": "0.0.1",
  "author": "Nostrdocs Developers",
  "action": {
    "default_popup": "build/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/colighter.bundle.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "build/background.bundle.js",
    "type": "module"
  },
  "options_page": "build/options.html",
  "commands": {
    "create-highlight": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "MacCtrl+H"
      },
      "description": "Highlight selected text"
    },
    "toggle-highlighter-cursor": {
      "description": "Toggle the highlighter cursor"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["build/sidebar.html", "build/options.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],  
  "permissions": [
    "commands",
    "contextMenus",
    "scripting",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"]
}
